{% extends "base.html.twig" %}


{% block main %}
    <main>
       
        {# Flashes utilisateurs #}

        {% for message in app.flashes('user_edit_ok') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Félicitations !</strong> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endfor %}

        {% for message in app.flashes('user_delete_ok') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Félicitations !</strong> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('user_add_success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Félicitations !</strong> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}


        {#  Flashes produits #}

        {% for message in app.flashes('products_add_success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Félicitations !</strong> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('product_edit_success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Félicitations !</strong> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}


        <h1>Bienvenue sur natation-eco.fr</h1>
        <section class="club ctn_centre">
            <article>
                <p class="contenant">
                    <a href="{{ path('club') }}"><img src={{ asset("media/club.jpg")}} alt="le club" class="accueil-img"></a>
                    <a class="texte_centrer menu" href="">Le club</a>
                </p>
            </article>
        </section>
        <section class="ctn_centre">
            <p class="contenant">
                <a href="{{ path('femme_show', {id: 2}) }}"><img src={{ asset("media/article-femme.jpg")}} alt="maillots de bain femme" class="accueil-img"></a>
                <a class="texte_centrer menu" href="{{ path('femme_show', {id: 2}) }}">Maillots de bain femme</a>
            </p>
            <p class="contenant">
                <a href="{{ path('homme_show', {id: 1}) }}"><img src={{ asset("media/article-homme.jpg")}} alt="maillots de bain homme" class="accueil-img"></a>
                <a class="texte_centrer menu" href="{{ path('homme_show', {id: 1}) }}">Maillots de bain homme</a>
            </p>
        </section>
        <section class="ctn_centre">
            <p class="contenant">
                <a href="{{ path('nutrition_show',{id: 3}) }}"><img src={{ asset("media/nutrition.jpg")}} alt="nutrition" class="accueil-img"></a>
                <a class="texte_centrer menu" href="{{ path('nutrition_show',{id: 3}) }}">Nutrition</a>
            </p>
            <p class="contenant">
                <a href="{{ path('equipement_show', {id:4}) }}"><img src={{ asset("media/equipement.jpg")}} alt="equipement" class="accueil-img"></a>
                <a class="texte_centrer menu" href="{{ path('equipement_show', {id:4}) }}">Equipement</a>
            </p>
        </section>
        <hr>
        <h3 class="mt-5">Ces articles pourraient vous intéresser</h3>
        <section>
            <hr>
        </section>
        <aside id="carousel" class="carousel mb-5" data-flickity='{ "autoPlay": true, "wrapAround": true, "autoPlay": true, "cellAlign": "center", "contain": true }'>
            {% for products in products %}
                <aside class="card carousel-cell" style="width: 18rem;">
                    <img src={{ vich_uploader_asset(products, 'imageFile') }} class="card-img-top" alt="image d'article" >
                    <aside class="card-body">
                        <h5 class="card-title">{{ products.name}}</h5>
                        <p>Prix : {{ products.price }} €</p>
                        <a href="{{ path('products_show', {id: products.id}) }}" class="command">Détails</a>
                    </aside> 
                </aside>
            {% endfor %}
        </aside>
    </main>
{% endblock %}
