{% extends "base.html.twig" %}

{% block title %}Natation-eco{% endblock %}


{% block main %}

    {% for message in app.flashes('product_edit_success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Félicitations !</strong> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <h1 class="mb-5">Bienvenue sur la page d'administration des produits</h1>

    <a href="{{ path('app_products_add') }}" class="command">Ajouter un produit</a>

    <table class="m-auto mb-5">
        <tbody class="bg-light">
            {% for products in products %}
                <tr class="border">
                    <td><img class="image_admin" src={{ asset("uploads/")}}{{ products.imageName }} class="card-img-top" alt="image d'article"></td>
                    <td><h5 class="card-title me-5 ms-5">{{ products.name}}</h5></td>
                    <td>Prix : {{ products.price }} €</td>
                    <td><a href="{{ path('products_show', {id: products.id}) }}" class="command me-3 mb-3 mt-3 ms-5" >Détails</a></td>
                    <td class="me-3 mt-3"><a href="{{ path('app_products_edit', {id: products.id}) }}" class="command me-3" >Modifier</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}