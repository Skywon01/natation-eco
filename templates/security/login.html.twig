{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}

            <h1 class="text-nowrap text-center">Veuillez vous connecter</h1>
    <section class="container col-6"> 
        <form method="post">
            {% if error %}
                <div class="alert alert-danger mt-3">Identifiants incorrects, veuillez r√©essayer.</div>
            {% endif %}


            <label for="inputEmail"> </label>
            <input type="email" value="{{ last_username }}" name="email" placeholder="Email" id="inputEmail" class="form-control mt-3" autocomplete="email" required autofocus>
            <label for="inputPassword" class="mt-3"> </label>
            <input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="form-control mt-3" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                    >
            <button class="btn command mt-3 mb-5 rounded-pill" type="submit">
                Connexion
            </button>
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
        </form>
    </section>
    <section class="container mb-5" style="col-6">
        <p>Si vous n'avez pas de compte veuillez vous inscrire ici -></p>
        <a href="{{ path('app_register') }}" class="btn command rounded-pill" >Inscription</a>
    </section>
{% endblock %}
