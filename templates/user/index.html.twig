{% extends "accueil.html.twig" %}


{% block title %}Natation-eco{% endblock %}


{% block main %}
    <h1>Mon compte</h1>
    <section class="mx-auto container d-flex justify-content-center">
        <img class="rounded-circle m-5" style="width:150px; height:150px;" src="{{ asset('media/compte/profil_default.jpg') }}" alt="Photo de profil">

        <article class="text-start">
            <h2>Bonjour {{ user.name }}</h2>

            <h3 id="desc_art">Vos informations</h3>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Cumque, quos.</p>

            <h3 id="desc_art">Nom</h3>
            <p>{{ user.name }}</p>

            <h3 id="desc_art">Mail</h3>
            <p>{{ user.email }}</p>

            <h3 id="desc_art">Adresse</h3>
            <p>Rue</p>
            <p>Ville</p>
            <p>Tel</p>

            <section class="d-flex inline-flex mb-5 mt-5">
                <article>
                    <a href="{{ path('user_edit',{id: app.user.id}) }}" class="btn rounded-pill command" style="text-transform:none;">Modifier mes informations</a>
                </article>
                <article>
                    <a href="{{ path('app_forgot_password_request',{id: app.user.id}) }}" class="btn rounded-pill command">Modifier mon mot de passe</a>
                </article>
                <article>
                    <a href="{{ path('user_delete',{id: app.user.id}) }}" onclick="return confirm('Etes-vous sûr de vouloir supprimer votre compte (cette action est irréversible)?')" class="btn command_del rounded-pill bg-danger">Supprimer mon compte</a>
                </article>
            </section>
        </article>
    </section>


{% endblock %}

