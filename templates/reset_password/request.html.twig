{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe{% endblock %}

{% block body %}
    
    {% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h2 class="mt-5 mb-5" style="color: #707070; font-family: Roboto;">Entrez votre adresse mail</h2>

    <section class="w-25 m-auto mb-5">
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
    </section>
            <div class="mb-5">
                <small>
                    Entrez votre adresse mail, un mail vous sera envoyé à l'adresse correspondante avec un lien pour réinitialiser votre mot de passe
                </small>
            </div>

            <button class="btn btn-primary">Envoyer le mail</button>
        {{ form_end(requestForm) }}

    {% endblock %}
{% endblock %}
