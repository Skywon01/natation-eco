{% extends "base.html.twig" %}

{% block description %}<meta name="description" content="Equipements">{% endblock %}
{% block title %}Equipements{% endblock %}

{% block main %}
    
    <h1>Equipements</h1>

    {% for product in product %}
        <section class="d-inline-flex pres_article mb-3">
            <aside class="card" style="width: 18rem;">
                <img src={{ asset("uploads/")}}{{ product.imageName }} class="card-img-top" alt="image d'article">
                <aside class="card-body">
                    <h5 class="card-title">{{ product.name}}</h5>
                    <p>Prix : {{ product.price }} €</p>
                    <a href="{{ path('products_show', {id: product.id}) }}" class="btn command rounded-pill transition-swipe">Détails</a>
                </aside> 
            </aside>
        </section>
    {% endfor %}

{% endblock %}