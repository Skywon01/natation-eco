{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

{% block main %}
    <h1>Contenu de votre panier</h1>
<section class="container mt-2">
    
    {% if app.user %}
    {% if items|length > 0 %}
    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">Ref</th>
                <th scope="col">Produit</th>
                <th scope="col">Prix TTC</th>
                <th scope="col">Quantité</th>
                <th scope="col">Somme</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <th scope="row">{{ item.products.id }}</th>
                <td>{{ item.products.name }}</td>
                <td>{{ item.products.price|number_format(2, ',', ' ') ~ ' €' }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ (item.products.price * item.quantity)|number_format(2, ',', ' ') }} €</td>
                <td>
                    <a href="{{ path('cart_delete', {id: item.products.id}) }}" class="btn btn-sm btn-danger" style="text-transform:none;" onclick="return confirm('Supprimer cet élément du panier ?');">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
            <tr>
                <th colspan="2"></th>
                <td><b>TOTAL</b></td>
                <td>{{ totalQuantity }}</td>
                <td>{{ total|number_format(2, ',', ' ') }} €</td>
                <td>
                    <form action="{{ path('checkout') }}" method="POST">
                        <button type="submit" class="btn btn-primary mt-3 mb-3 w-50">Payer {{ total|number_format(2, ',', ' ') }} €</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
    {% else %}
    <p><b>Votre panier est vide !!</b></p>
    {% endif %}
</section>
{% else %}

<section class="d-flex flex-column">
<p>Veuillez vous connecter pour voir votre panier</p>
<a href="{{ path('app_login') }}" id="command" style="text-transform:none;">Connexion</a>
</section>

{% endif %}
{% endblock %}
{% endblock %}
